generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id           String         @id
    name         String
    photo        String
    bombs        Bomb[]
    Room         Room[]
    UsersOnRooms UsersOnRooms[]
}

model Room {
    id           String         @id
    owner        User           @relation(fields: [ownerId], references: [id])
    ownerId      String
    bombs        Bomb[]
    UsersOnRooms UsersOnRooms[]
    startTime    DateTime
    endTime      DateTime
    realEndTime  DateTime
}

model UsersOnRooms {
    room    Room    @relation(fields: [roomId], references: [id])
    roomId  String
    user    User    @relation(fields: [userId], references: [id])
    userId  String
    isAdmin Boolean

    @@id([roomId, userId])
}

model Bomb {
    room           Room     @relation(fields: [roomId], references: [id])
    roomId         String
    id             String   @id
    text           String[]
    originalUserId String
    senderId       String
    time           DateTime
    owner          User     @relation(fields: [ownerId], references: [id])
    ownerId        String
    via            String[]
}
